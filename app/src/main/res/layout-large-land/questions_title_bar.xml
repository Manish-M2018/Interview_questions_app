<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center"
    android:id="@+id/questions_title_bar_page"
    android:background="@drawable/pattern1">


    <Button
        android:id="@+id/text_to_speech_on"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/music_on"/>

    <TextView
        android:id="@+id/tvquestions_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questions_title"
        android:textSize="40sp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/text_to_speech_off"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/music_off"/>

</android.support.v7.widget.LinearLayoutCompat>